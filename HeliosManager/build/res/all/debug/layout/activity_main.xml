<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_label"
        android:singleLine="false"
        android:id="@+id/textView"/>

    <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:max="255"
            android:enabled="false"
            android:progress="0"
            android:layout_below="@+id/textView"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@+id/textView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="80 Â°C"
            android:id="@+id/textView3"
            android:layout_alignTop="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_marginLeft="13dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Red:"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/seekBar"
            android:layout_alignLeft="@+id/textView"/>

    <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar2"
            android:max="255"
            android:enabled="false"
            android:progress="0"
            android:layout_below="@+id/seekBar"
            android:layout_alignLeft="@+id/seekBar"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Green:"
            android:id="@+id/textView4"
            android:layout_below="@+id/seekBar"
            />

    <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar3"
            android:max="255"
            android:enabled="false"
            android:progress="0"
            android:layout_below="@+id/seekBar2"
            android:layout_alignLeft="@+id/seekBar2"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Blue:"
            android:id="@+id/textView5"
            android:layout_below="@+id/seekBar2"
            android:layout_alignLeft="@+id/textView4"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Illumination:"
            android:singleLine="false"
            android:id="@+id/textView6"
            android:layout_below="@+id/seekBar3"
            android:layout_alignLeft="@+id/textView5"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="600 lux"
            android:id="@+id/textView7"
            android:layout_below="@+id/seekBar3"
            android:layout_alignLeft="@+id/textView3"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toLeftOf="@+id/button"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Led Text"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/editText"
            android:layout_alignLeft="@+id/textView6"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Text"
            android:id="@+id/button"
            android:layout_below="@+id/textView7"
            android:layout_alignRight="@+id/seekBar3"/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toggle Led"
            android:id="@+id/checkBox"
            android:layout_above="@+id/textView2"
            android:layout_alignParentRight="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Device to connect to:"
            android:id="@+id/textView9"
            android:layout_below="@+id/editText"
            android:layout_alignLeft="@+id/textView8"
            android:layout_marginTop="13dp"/>

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_alignTop="@+id/textView9"
            android:layout_toRightOf="@+id/textView7"
            />

</RelativeLayout>
